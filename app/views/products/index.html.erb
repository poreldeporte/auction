<h1>Product List</h1>

<% if @products != [] %>
	<% @products.each do |prod| %>
		Title:<%= prod.title %>
		<br>
		Description:<%= prod.description %>
		<br>
		Deadline:<%= prod.deadline %>
		<br>
		<a href=<%= user_product_path(@user, prod) %> class="btn btn-primary">View</a>
		<a href=<%= edit_user_product_path(@user, prod) %> class="btn btn-warning">Edit</a>
		<%= link_to('Delete', user_product_path(@user, prod), :method => :delete, :class => 'btn btn-danger', :data => {confirm: 'Are you sure?'}) %>

		<br><br>
	<% end %>
<% else %>
	<h1>You have no products listed!</h1>
<% end %>

<a href=<%= new_user_product_path %> class="btn btn-info">Add Product</a>
<a href=<%= users_path %> class="btn btn-info">Return to User List</a>
