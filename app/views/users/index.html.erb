<h1>User List</h1>

<% if @user != [] %>
	<% @user.each do |user| %>
		ID:<%= user.id %>
		<br>
		Name:<%= user.name %>
		<br>
		E-mail:<%= user.email %>
		<br>
		<%= link_to('Delete', user_path(user), :method => :delete, :class => 'btn btn-danger', :data => {confirm: 'Are you sure?'}) %>
		<a href=<%= user_products_path(user) %> class="btn btn-info">View Products!</a>
		<br><br>
	<% end %>
<% else %>
	<h1>You have no users listed!</h1>
<% end %>

<a href=<%= new_user_path %> class="btn btn-warning">Add New User!</a>
